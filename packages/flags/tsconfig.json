{
    "include": ["src/**/*"],
    "exclude": ["scripts/**/*"],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react"
    }
}
